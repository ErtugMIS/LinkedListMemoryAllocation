#include <stdio.h>

#define SIZE 8

int bitmap[SIZE] = {0};

int allocate() {
    for (int i = 0; i < SIZE; i++) {
        if (bitmap[i] == 0) {
            bitmap[i] = 1;
            return i;
        }
    }
    return -1; // no free block
}

void free_block(int index) {
    if (index >= 0 && index < SIZE) {
        bitmap[index] = 0;
    }
}

void display() {
    for (int i = 0; i < SIZE; i++) {
        printf("%d ", bitmap[i]);
    }
    printf("\n");
}
